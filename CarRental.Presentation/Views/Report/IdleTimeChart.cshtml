@model List<WeeklyWorkTimeViewModel>
@{
    ViewData["Title"] = "IdleTimeChart";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Pie Chart</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.0.1/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .chart-container {
            position: relative;
            width: 100%; 
            height: 600px;
            margin: 0 auto; 
        }
        canvas {
            display: block;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                Araç Boşta Kalma Süreleri (Yüzde)
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Araç Adı</th>
                            <th>Plaka</th>
                            <th>Boşta Kalma Yüzdesi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var idlePercentage = 100 - Model[i].ActiveWorkPercentage; 
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Plate</td>
                                <td>@idlePercentage.ToString("F2") %</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-success text-white">
                Araç Boşta Kalma Süresi Grafiği
            </div>
            <div class="chart-container">
                <canvas id="idleTimePieChart"></canvas>
            </div>
        </div>
    </div>
    <script>
        const chartData = {
            labels: @Html.Raw(Json.Serialize(Model.Select(x => x.Plate).ToList())),
            datasets: [{
                label: "Boşta Kalma Yüzdesi",
                data: @Html.Raw(Json.Serialize(Model.Select(x => x.IdleTimePercentage).ToList())),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        };

        const ctx = document.getElementById('idleTimePieChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: chartData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            }
        });
    </script>
</body>
</html>

