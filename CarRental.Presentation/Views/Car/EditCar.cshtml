@model CarRental.Core.Entities.Car
@{
    ViewData["Title"] = "EditCar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .form-container {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f8;
    }

    .form-label-custom {
        font-size: 1.5rem;
        font-weight: bold;
    }

</style>


<form asp-asp-controller="Car" asp-action="EditCar" class="form-container mt-5" method="post">
    <h3 style="text-align:center;">Araç Güncelleme</h3>
    <div class="mb-3">
        @Html.Label("UserId", "Kullanıcı Seçimi", new { @class = "form-label-custom" })
        @Html.DropDownListFor(
                 x => x.UserId,
                 (IEnumerable<SelectListItem>)ViewBag.Users,
                 "Kullanıcı Seçin",
                 new { @class = "form-select form-select-lg mt-2" }
                 )
    </div>
    <div class="mb-3">
        @Html.Label("Name", "Araç Adı", new { @class = "form-label-custom" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-lg mt-2" })
    </div>
    <div class="mb-3">
        @Html.Label("Plate", "Plaka", new { @class = "form-label-custom" })
        @Html.TextBoxFor(x => x.Plate, new { @class = "form-control form-control-lg mt-2" })
    </div>
    <button class="btn btn-outline-warning">Güncelle</button>
</form>