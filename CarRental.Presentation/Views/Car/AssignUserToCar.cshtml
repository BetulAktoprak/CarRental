
@{
    ViewData["Title"] = "AssignUserToCar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Araç Kullanıcı Atama</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AssignUserToCar" method="post">
                        <div class="form-group mb-4">
                            <label for="CarId" class="form-label">Araç Seç</label>
                            <select id="CarId" name="carId" class="form-select">
                                <option value="">Araç Seçiniz</option>
                                @foreach (var car in ViewBag.Cars)
                                {
                                    <option value="@car.Value">@car.Text</option>
                                }
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label for="UserId" class="form-label">Kullanıcı Seç</label>
                            <select id="UserId" name="userId" class="form-select">
                                <option value="">Kullanıcı Seçiniz</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Atama Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


