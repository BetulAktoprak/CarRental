@model CarRental.Core.Entities.Car
@{
    ViewData["Title"] = "AddCar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .form-container {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f8;
    }

</style>

<form asp-action="AddCar" asp-controller="Car" class="form-container mt-5" method="post">
    <h3 style="text-align:center;">Yeni Araç Kaydı</h3>
    <div class="form-group mb-3">
        <label for="UserId" class="form-label font-weight-bold">Kullanıcı Seçimi</label>
        <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users">
            <option value="">Kullanıcı seçin...</option>
        </select>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Name" class="form-label font-weight-bold">Araç Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Araç adını giriniz..." />
    </div>

    <div class="form-group mb-4">
        <label asp-for="Plate" class="form-label font-weight-bold">Plaka</label>
        <input asp-for="Plate" class="form-control" placeholder="Plakayı giriniz..." />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary btn-block mt-4">
        <i class="fas fa-save"></i> Kaydet
    </button>
</form>
